<div class="panel panel-default">
  <div class="panel-heading"><h1>Listing Pins</h1> </div>
    <div class="panel-body">

<table>
  <thead>
    <tr>
      <th>Pin</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= pin.description %></td>
        <td><%= link_to "Show", pin, class: 'btn btn-info btn-xs' %></td>
        <% if pin.user == current_user %>
        <td><%= link_to "Edit", edit_pin_path(pin), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to "Destroy", pin, method: :delete, data:  { confirm: 'Are you sure?'  }, class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
    </div>
  <div class="panel-footer"><%= link_to 'New Pin', new_pin_path, class: 'btn btn-default' %></div>
</div>
